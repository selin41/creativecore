/* ARİTMETİK İŞLEMLER */

#include <stdio.h>

int main()
{
  int sayi1, sayi2;
  int toplam, fark, carpim;
  float bolum;
  int mod;

  printf("İki sayı giriniz: ");
  scanf("%d%d", sayi1 , sayi2);

  toplam = sayi1 + sayi2;
  fark = sayi1 - sayi2;
  carpim = sayi1 * sayi2;
  bolum = (float) sayi / sayi2;
  mod = sayi1 % sayi2;

  printf("%d", toplam);
  printf("%d", fark);
  printf("%d", carpim);
  printf("f", bolum);
  printf("d", mod);

  return 0;
}
